<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      Globature
    </title>

    {{!-- font-awesome --}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    {{! bootstrap cdns }}
    <!-- Latest compiled and minified CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    />
    <!-- jQuery library -->
    <script
      src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"
    ></script>
    <!-- Popper JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
    ></script>
    <!-- Latest compiled JavaScript -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
    ></script>

    {{! fab-icon }}
    <link rel="icon" type="image/ico" href="/media/favicon.ico" />

    {{! local-css }}
    <link rel="stylesheet" type="text/css" href="css/style.css" />

   
  </head>
  <body>
    {{>header}}
    <section>
        <div class="container-fluid page_content">
            <div class="row">
                <div class="col-md-10 col-12 mx-auto my-5">
                  <form class="form-inline justify-content-center my-2 my-lg-0" action="/weather" method="GET">
                      <input class="form-control search_space mr-sm-2" id="user_location" type="search" placeholder="Search" name="location" aria-label="Search">
                      <button class="btn btn-outline-success my-2 my-sm-0" id="get_location" type="submit">Search</button>
                  </form>
                </div>
                <div class="col-md-10 col-12 mx-auto my-5">
                  <div class="op_box w-50 m-auto">
                    <div class="date_info">
                      <p class="info">
                        <span class="date_" id="date_">sas</span>
                        <span class="location_">ass</span>
                      </p>
                    </div>
                    <div class="main">
                      <p>{{note}}</p>
                      <p style="color:red">{{warn}}</p>
                      <p>{{temp}}</p>
                      <p>{{feel}}</p>
                      <p>{{mode}}</p>
                      <p class="location">{{location}}</p>
                    </div>
                  </div>
                </div>
            </div>
        </div>
    </section>
    {{>footer}}
     {{!-- local js --}}
    <script type ="text/javascript" src="js/script.js"></script>
  </body>
</html>